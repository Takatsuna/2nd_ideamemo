<h1>アイデアの一覧</h1>
<% if can? :manage, @users %>
Your role is 'admin'.
<% else %>
Your role is 'user'.
<% end %>
<table>
  <thead>
    <tr>
      <th width= "100px">名前</th>
      <th width= "300px">ご説明</th>
      <th>写真</th>
      <th width= "100px">場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url,width:100) if idea.picture.present? %></td>
        <td><%= idea.place %></td>
        <td><%= link_to '見る！', idea %></td>
		<%if can? :manage , User %>
          <td><%= link_to '編集する！', edit_idea_path(idea) %></td>
          <td><%= link_to '捨てる。。', idea, method: :delete, data: { confirm: '本当に消しますか?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<hr>

<%= link_to '新規アイデアを投稿', new_idea_path %>
